<Window x:Class="CollegeAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CollegeAdmin" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Верхняя панель -->
        <Border DockPanel.Dock="Top" Height="40" Background="#FF4F46E5">
            <TextBlock Text="Система управления колледжем"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"/>
        </Border>

        <!-- Левое меню -->
        <StackPanel DockPanel.Dock="Left" Width="160" Background="#FF6366F1">
            <Button Content="Студенты" Click="StudentsButton_Click"
                    Margin="4" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Padding="10" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4F46E5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Расписание" Click="ScheduleButton_Click"
                    Margin="4" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Padding="10" Cursor="Hand"/>

            <Button Content="Профиль" Click="ProfileButton_Click"
                    Margin="4" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Padding="10" Cursor="Hand"/>
        </StackPanel>

        <!-- Основная область -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>



