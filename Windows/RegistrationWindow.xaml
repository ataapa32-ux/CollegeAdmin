<Window x:Class="CollegeAdmin.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация студента" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Фамилия"/>
            <TextBox Name="LastNameTextBox"/>

            <TextBlock Text="Имя"/>
            <TextBox Name="FirstNameTextBox"/>

            <TextBlock Text="Отчество"/>
            <TextBox Name="MiddleNameTextBox"/>

            <TextBlock Text="Группа"/>
            <TextBox Name="GroupTextBox"/>

            <TextBlock Text="Курс"/>
            <TextBox Name="CourseTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10">
            <Image Name="PhotoImage" Width="100" Height="100" Stretch="Uniform"/>
            <Button Content="Выбрать фото" Width="120" Margin="10,0,0,0" Click="SelectPhoto_Click"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Зарегистрироваться" Height="30" Click="Register_Click"/>
    </Grid>
</Window>

