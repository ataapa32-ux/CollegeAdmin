@model CollegeAdmin.Core.Models.User

@{
    Layout = "_Layout";
    ViewData["Title"] = "Регистрация";
}

<h2 class="mb-4">Регистрация</h2>

<form asp-action="Register" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <img src="@Url.Content("~/image/default-user.png")"
                 class="img-thumbnail mb-3" alt="Фото пользователя" style="max-width: 200px; height: auto;">
            <div class="mb-3">
                <label class="form-label">Загрузить фото</label>
                <input type="file" name="photo" class="form-control" />
            </div>
        </div>
        <div class="col-md-8">
            <div class="mb-3">
                <label class="form-label">Имя</label>
                <input type="text" name="FirstName" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Фамилия</label>
                <input type="text" name="LastName" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Отчество</label>
                <input type="text" name="MiddleName" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="Email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Пароль</label>
                <input type="password" name="Password" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Роль</label>
                <select name="Role" class="form-select" required>
                    <option value="Student">Студент</option>
                    <option value="Teacher">Преподаватель</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success">Зарегистрироваться</button>
        </div>
    </div>
</form>





